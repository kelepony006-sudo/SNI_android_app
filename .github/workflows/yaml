name: Self-Hosted Runner Example

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: self-hosted  # Questo è il punto chiave!
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3
    
    - name: Run a script
      run: echo "Hello from self-hosted runner!"